{% extends '@nucleus/partials/particle.html.twig' %}

{% set url = site.url|replace({"http://": "https://", "http://www.": "https://www."})|e %}

{% set tica = url ~ '/wp-json/tainacan/v2/collection/' ~ particle.ticaid ~ '/items/?perpage=' ~ particle.limit ~ '&order=DESC&orderby=date' %}

{% set initialpull = tainacancall(tica) %}

{% set count = initialpull['count'] - 1 %}

{% set thumb = initialpull['thumb'] %}

{% set title = initialpull['title'] %}

{% set date = initialpull['date'] %}

{% set frame = initialpull['frame'] %}

{% block particle %}
<div class="uk-grid-small uk-child-width-expand@s uk-text-center" uk-grid>
  {% for i in 0..count %}
    <div class="uk-width-1-6@xl uk-width-1-5@l uk-width-1-4@m uk-width-1-2@s">
      <table class="uk-table">
        <tbody>
          <tr>
            <td class="uk-padding-remove">
              <a href="#modal-{{ i }}" uk-toggle><img class="uk-height-max-medium" src="{{ thumb[i] }}"></a>
            </td>
          </tr>
          <tr>
            <td class="uk-text-large uk-text-bold uk-padding-remove">{{ title[i] }}</td>
          </tr>
        </tbody>
        <tfoot>
          <tr>
            <td class="uk-padding-remove">{{ date[i] }}</td>
          </tr>
        </tfoot>
      </table>
    </div>
    <div id="modal-{{ i }}" class="uk-modal-container" uk-modal>
      <div class="uk-modal-dialog">
        <button class="uk-modal-close-outside" type="button" uk-close></button>
        {% if '<iframe>' in frame[i] %}
        {{ frame[i]|raw }}
        {% else %}
        <iframe src="{{ site.url ~ '/wp-content/plugins/tainacan/views/libs/pdf-viewer/pdfjs-dist/web/viewer.html?file=' ~ site.url ~ frame[i] }}" width="100%" height="640px" allowfullscreen=""></iframe>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}
