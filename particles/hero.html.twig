{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
<div class="uk-background-contain">
  <div>
    <div class="uk-inline">
      <img src="{{ url(particle.image) }}" width="2000" height="400" alt="" style="min-height:250px;max-height:400px;overflow:hidden;object-fit:cover;">
      <div class="uk-overlay uk-overlay-default uk-position-center-left uk-box-shadow-small uk-width-2-3 uk-border-rounded">
        <div class="uk-child-width-expand@m uk-grid-large uk-grid-match" uk-grid>
          <div>
            <div>
              <h1 class="uk-text-capitalize">{{ particle.boxtitle|e }}</h1>
              <p class="uk-visible@l">{{ particle.boxinformation|e }}</p>
            </div>
          </div>
          <div class="uk-position-bottom-right uk-width-auto">
            <a href="{{ particle.buttonlink|e }}"><button class="uk-button uk-button-primary uk-border-rounded sp-hero-button">{{ particle.buttontext|e }}<span class="uk-position-center-right" uk-icon="arrow-right"></span></button></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
