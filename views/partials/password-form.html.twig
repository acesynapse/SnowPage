{% set twigTemplate = 'password-form.html.twig' %}

{% block password_form %}

    <form class="password-form" action="{{ site.site_url }}/wp-login.php?action=postpass" method="post">
        <label for="pwbox-{{post.ID}}">{{ __('Password', 'snowpage') }}</label>
        <input class="password-box" name="post_password" id="pwbox-{{post.ID}}" type="password" placeholder="{{ __('Password', 'snowpage') }}" size="20" maxlength="30" />
        <input class="password-btn button" type="submit" name="Submit" value="{{ __('Submit', 'snowpage') }}" />
    </form>

{% endblock %}
